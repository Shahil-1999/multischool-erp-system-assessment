              "host": ["{{baseUrl}}"],
              "path": ["schools", "{{school_id}}"]
            }
          }
        },
        {
          "name": "Create user for school",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
