            "url": {
              "raw": "{{baseUrl}}/schools",
              "host": ["{{baseUrl}}"],
              "path": ["schools"]
            }
          }
        },
        {
          "name": "Create school",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"New School\"\n}" },
            "url": {
              "raw": "{{baseUrl}}/schools",
              "host": ["{{baseUrl}}"],
              "path": ["schools"]
            }
          }
        },
        {
          "name": "Get school",
