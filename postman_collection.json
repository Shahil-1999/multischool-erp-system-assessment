            "url": {
              "raw": "{{baseUrl}}/schools/{{school_id}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["schools", "{{school_id}}", "users"]
            }
          }
        },
        {
          "name": "List users in school",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/schools/{{school_id}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["schools", "{{school_id}}", "users"]
            }
          }
        }
      ]
    },
    {
      "name": "Students",
      "item": [
        {
          "name": "List students",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
