          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Updated Student\"\n}" },
            "url": {
              "raw": "{{baseUrl}}/schools/{{school_id}}/students/{{studentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["schools", "{{school_id}}", "students", "{{studentId}}"]
            }
          }
        },
        {
          "name": "Delete student",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/schools/{{school_id}}/students/{{studentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["schools", "{{school_id}}", "students", "{{studentId}}"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
